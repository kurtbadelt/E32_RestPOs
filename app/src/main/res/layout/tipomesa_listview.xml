<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_TipoMesa_NumeroTipoMesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero Tipo de Mesa: 0000"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_TipoMesa_NombreTipoMesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre tipo de Mesa"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_TipoMesa_DescripcionTipoMesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripcion"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_TipoMesa_EstatusENSistema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estatus en Sistema"
        android:textSize="16dp"
        android:textStyle="bold" />


</LinearLayout>